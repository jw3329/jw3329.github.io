---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEOHead from '../components/SEOHead.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogType?: string;
  publishedDate?: Date;
  articleCategory?: string;
  articleTags?: string[];
  ogImage?: string;
  jsonLd?: Record<string, unknown> | Record<string, unknown>[];
  wide?: boolean;
}

const { title, description, ogType, publishedDate, articleCategory, articleTags, ogImage, jsonLd, wide = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEOHead
      title={title}
      description={description}
      ogType={ogType}
      publishedDate={publishedDate}
      articleCategory={articleCategory}
      articleTags={articleTags}
      ogImage={ogImage}
      jsonLd={jsonLd}
    />
  </head>
  <body>
    <Header />
    <main class:list={[{ wide }]}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
