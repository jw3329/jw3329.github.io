---
import ThemeToggle from './ThemeToggle.astro';

const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about/', label: 'About' },
  { href: '/writings/', label: 'Writings' },
  { href: '/projects/', label: 'Projects' },
];
---

<header>
  <nav>
    <a href="/" class="logo">JW</a>
    <div class="nav-right">
      <ul class="nav-links">
        {navLinks.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={[{ active: pathname === href || (href !== '/' && pathname.startsWith(href)) }]}
            >
              {label}
            </a>
          </li>
        ))}
      </ul>
      <ThemeToggle />
      <button id="mobile-menu-btn" class="mobile-menu-btn" aria-label="Toggle menu">
        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </nav>
  <ul class="mobile-nav" id="mobile-nav">
    {navLinks.map(({ href, label }) => (
      <li>
        <a
          href={href}
          class:list={[{ active: pathname === href || (href !== '/' && pathname.startsWith(href)) }]}
        >
          {label}
        </a>
      </li>
    ))}
  </ul>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--bg);
    border-bottom: 1px solid var(--border);
    transition: background-color var(--transition);
  }

  nav {
    max-width: var(--max-width-wide);
    margin: 0 auto;
    padding: 0 1.5rem;
    height: var(--header-height);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text);
    letter-spacing: -0.02em;
  }

  .logo:hover {
    color: var(--accent);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 0.25rem;
  }

  .nav-links a {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-secondary);
    padding: 0.4rem 0.75rem;
    border-radius: 6px;
    transition: all var(--transition);
  }

  .nav-links a:hover {
    color: var(--text);
    background: var(--bg-secondary);
  }

  .nav-links a.active {
    color: var(--accent);
    background: var(--accent-light);
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--text);
    cursor: pointer;
    padding: 0.25rem;
  }

  .mobile-nav {
    display: none;
    list-style: none;
    padding: 0.5rem 1.5rem 1rem;
    border-bottom: 1px solid var(--border);
  }

  .mobile-nav.open {
    display: block;
  }

  .mobile-nav a {
    display: block;
    padding: 0.6rem 0;
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--text-secondary);
  }

  .mobile-nav a.active {
    color: var(--accent);
  }

  @media (max-width: 640px) {
    .nav-links {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }
</style>

<script is:inline>
  document.getElementById('mobile-menu-btn').addEventListener('click', () => {
    document.getElementById('mobile-nav').classList.toggle('open');
  });
</script>
